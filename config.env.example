# Example configuration for OpenTelemetry Demo App
# You can set these as environment variables

# Service configuration
export OTEL_SERVICE_NAME="my-logging-demo"
export OTEL_SERVICE_VERSION="1.0.0"
export OTEL_RESOURCE_ATTRIBUTES="service.name=my-logging-demo,service.version=1.0.0,environment=development"

# Logging configuration
export OTEL_LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Export configuration (uncomment to use OTLP endpoint)
# export OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
# export OTEL_EXPORTER_OTLP_PROTOCOL="grpc"

# Console export (default: enabled)
export OTEL_TRACES_EXPORTER="console"
export OTEL_LOGS_EXPORTER="console"